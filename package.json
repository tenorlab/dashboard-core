{
  "name": "@tenorlab/dashboard-core",
  "version": "1.4.3",
  "description": "Framework-agnostic foundation types and utils for dashboards",
  "author": "Damiano Fusco",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tenorlab/dashboard-core.git"
  },
  "bugs": {
    "url": "https://github.com/tenorlab/dashboard-core/issues"
  },
  "homepage": "https://github.com/tenorlab/dashboard-core#readme",
  "keywords": [
    "dashboard, component, libraries, scripts, typescript, react, vue, svelte, tenorlab, builtwithjavascript"
  ],
  "scripts": {
    "dev": "vite",
    "clean": "rm -rf dist node_modules package-lock.json",
    "OLD-build-types": "tsc src/index.ts --jsx react-jsx --downlevelIteration --esModuleInterop --declaration --emitDeclarationOnly --outDir dist",
    "OLD-build": "npm run pretty; tsc --jsx react-jsx --esModuleInterop && vite build; npm run build-types",
    "build": "npm run pretty && vite build",
    "pub": "npm run build; npm publish --access public --otp=",
    "test": "TESTING=true vitest run",
    "test-watch": "TESTING=true vitest watch",
    "pretty": "npx prettier -w \"./src/**/*.ts*\"",
    "version-patch": "npm run pretty && npm version patch -m \"Patch version\"",
    "preversion": "npm run test",
    "version": "npm run build",
    "postversion": "git push",
    "push": "npm run pretty; git add .; git commit -m \"Latest\"; git push"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/dashboard-core.es.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/dashboard-core.umd.js"
      }
    },
    "./styles.css": "./dist/dashboard-core.css"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/dashboard-core.umd.js",
  "module": "./dist/dashboard-core.es.js",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  }
}
